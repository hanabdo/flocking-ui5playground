<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
>
  <Dialog
      title="About"
  >
    <content>
      <TextArea
        value="foo"
        width="100%"
      />
      <Text
        text="License info"
      />
      <TextArea
        value="bar"
        width="100%"
      />

      <Link
        target="_blank"
        class="fpBlock"
        width="auto"
        text="Run unit tests"
        href="/test/unit/unitTests.qunit.html"
      />
      <Link
        target="_blank"
        class="fpBlock"
        width="auto"
        text="Run integration tests"
        href="/test/integration/opaTests.qunit.html"
      />

      <Text
        width="auto"
        text="Powered by: "
      />
      <Link
        target="_blank"
        class="sapUiTinyMarginBegin"
        text="Flocking"
        href="http://flockingjs.org/"
      />
      <Link
        target="_blank"
        class="sapUiTinyMarginBegin"
        text="OpenUI5"
        href="http://openui5.org/"
      />
      <Link
        target="_blank"
        class="sapUiTinyMarginBegin"
        text="CodeMirror"
        href="http://codemirror.net/"
      />
    </content>

    <beginButton>
      <Button
          text="Close"
          press="onCloseDialog"
      />
    </beginButton>
  </Dialog>
</core:FragmentDefinition>
